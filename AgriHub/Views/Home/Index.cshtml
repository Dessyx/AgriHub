@{
    ViewData["Title"] = "Home Page";
}

<div class="agrihub-hero d-flex flex-column" style="min-height: 100vh;">
    <div class="agrihub-header d-flex align-items-center mb-2">
        <img src="/Images/Logo.png" alt="AgriHub Logo" class="agrihub-logo me-2" style="width:45px; height:36px;" />
        <span class="agrihub-title">AgriHub</span>
    </div>
    <div class="agrihub-main-content position-relative flex-grow-1">
        
        <div class="agrihub-bubble agrihub-bubble-employees">
            <span class="bubble-title">Employees</span><br />
            Bring farmers onboard—create profiles today!<br />Find exactly what you need and filter products.
        </div>
        <div class="agrihub-bubble agrihub-bubble-farmers">
            <span class="bubble-title">Farmers</span><br />
            Upload your products in seconds!
        </div>
        <div class="agrihub-bubble agrihub-bubble-both">
            <span class="bubble-title">Farmers and Employees</span><br />
            Farmers: View & manage your listed products.<br />
            Employees: Access and manage all farm products
        </div>
    </div>
    <div class="text-center mt-2">
        <button type="button" onclick="location.href='/Account/Login'" class="btn btn-dark btn-lg px-5 py-2 letsgo-btn">
            Let's get started!
        </button>
    </div>
    <footer class="agrihub-footer mt-2">
        <div class="agrihub-footer-bar text-center py-2">
            <span class="footer-slogan">Grow more, connect more – with AgriHub</span>
        </div>
    </footer>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        overflow: hidden;
    }
    
    .agrihub-hero {
        padding: 1rem;
    }

    .agrihub-main-content {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .agrihub-bubble {
        margin: 0.5rem 0;
    }
</style>
