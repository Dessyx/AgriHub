@model AgriHub.Models.ProductViewModel

@{
    ViewData["Title"] = "Add Product";
}
<link rel="stylesheet" href="~/css/productForm.css" />

<div class="claim-form-container" style="max-width: 600px; margin: auto;">
   
    <form asp-controller="Product" asp-action="AddProduct" method="post">
        <img src="~/images/AddProduct img.png" alt="Add Product" class="form-header-image" />
        <h1>Add Product</h1>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-row">
            <div class="left-column">
                <!-- Product Name -->
                <div class="form-group">
                    <label for="Name">Product Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                </div>

                <!-- Category -->
                <div class="form-group">
                    <label for="Category">Category</label>
                    <span asp-validation-for="Category" class="text-danger"></span>
                    <input asp-for="Category" class="form-control" placeholder="Enter category" />
                </div>
            </div>

            <div class="right-column">
                <!-- Production Date -->
                <div class="form-group">
                    <label for="ProductionDate">Production Date</label>
                    <span asp-validation-for="ProductionDate" class="text-danger"></span>
                    <input asp-for="ProductionDate" type="date" class="form-control" />
                </div>
            </div>
        </div>

        <div class="submit-button-container">
            <button type="submit" class="btn btn-success">Add Product</button>
        </div>

        <div class="submit-button-container" style="margin-top: 10px;">
            <a asp-action="MyProducts" class="btn btn-secondary" style="background-color: gray; padding: 10px 20px; border-radius: 50px; color: white; text-decoration: none;">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
