@model IEnumerable<AgriHub.Models.Entities.Product>
@{
    ViewData["Title"] = "My Products";
}
<h2>My Products</h2>
<a class="btn btn-success mb-3" asp-action="Add">Add New Product</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Production Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.ProductionDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table> 