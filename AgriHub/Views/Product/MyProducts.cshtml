@model IEnumerable<AgriHub.Models.Entities.Product>
@{
    ViewData["Title"] = "My Products";

}

<style>
    body {
        background-color: lightgray;
    }
</style>

<h1>Join our marketplace—upload your products!</h1>

<!-- 3D Slideshow Section -->
<section id="slideshow">
    <div class="entire-content">
        <div class="content-carrousel">
            <figure class="shadow"><img src="/Images/Slideshow img 1.jpg" /></figure>
            <figure class="shadow"><img src="~/Images/Slideshow img 2.jpg" /></figure>
            <figure class="shadow"><img src="~/Images/Slideshow img 3.jpeg" /></figure>
            <figure class="shadow"><img src="~/Images/Slideshow img 4.jpg" /></figure>          
            <figure class="shadow"><img src="~/Images/Slideshow img 5.jpg" /></figure>
            <figure class="shadow"><img src="~/Images/Slideshow img 6.jpg" /></figure>
            <figure class="shadow"><img src="~/Images/Slideshow img 7.jpg" /></figure>
            <figure class="shadow"><img src="~/Images/Slideshow img 8.jpg" /></figure>
            <figure class="shadow"><img src="/Images/Slideshow img 9.jpg" /></figure>
        </div>
    </div>
</section>

<h2>My Products</h2>
<a class="btn btn-success mb-3" asp-action="AddProduct">Add New Product</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Production Date</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.ProductionDate.ToShortDateString()</td>
                <td>@product.Price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table> 