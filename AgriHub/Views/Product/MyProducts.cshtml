@model IEnumerable<AgriHub.Models.Entities.Product>
@{
    ViewData["Title"] = "My Products";
}

<style>
    body {
        background-color: #222;
    }
    h1, h2 {
        color: #fff;
    }
    .product-cards-container {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        justify-content: flex-start;
        margin-top: 2rem;
    }
    .product-card {
        background: #18191c;
        color: #fff;
        border-radius: 20px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.15);
        padding: 2rem 1.5rem 1.5rem 1.5rem;
        width: 300px;
        position: relative;
        margin-bottom: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .product-card .corner-accent {
        position: absolute;
        top: 0;
        right: 0;
        width: 50px;
        height: 50px;
        background: #4fc3f7;
        border-top-right-radius: 20px;
        border-bottom-left-radius: 50px;
        z-index: 1;
    }
    .product-card h2 {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1.2rem;
        margin-top: 0.5rem;
        z-index: 2;
        position: relative;
    }
    .product-card .info {
        margin-bottom: 1.2rem;
        z-index: 2;
        position: relative;
    }
    .product-card .info span {
        font-weight: bold;
    }
    .product-card .actions {
        display: flex;
        gap: 0.5rem;
        margin-top: auto;
        z-index: 2;
        position: relative;
    }
    .product-card .btn {
        border-radius: 20px;
        padding: 0.4rem 1.2rem;
        font-size: 1rem;
    }
    .product-card .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }
    .product-card .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
    }
    .product-card .btn:hover {
        opacity: 0.9;
    }
</style>

<h1>Join our marketplace—upload your products!</h1>

<!-- 3D Slideshow Section -->
<section id="slideshow">
    <div class="entire-content">
        <div class="content-carrousel">
            <figure class="shadow"><img src="/Images/Slideshow img 1.jpg" /></figure>
            <figure class="shadow"><img src="~/Images/Slideshow img 2.jpg" /></figure>
            <figure class="shadow"><img src="~/Images/Slideshow img 3.jpeg" /></figure>
            <figure class="shadow"><img src="~/Images/Slideshow img 4.jpg" /></figure>          
            <figure class="shadow"><img src="~/Images/Slideshow img 5.jpg" /></figure>
            <figure class="shadow"><img src="~/Images/Slideshow img 6.jpg" /></figure>
            <figure class="shadow"><img src="~/Images/Slideshow img 7.jpg" /></figure>
            <figure class="shadow"><img src="~/Images/Slideshow img 8.jpg" /></figure>
            <figure class="shadow"><img src="/Images/Slideshow img 9.jpg" /></figure>
        </div>
    </div>
</section>

<h2>My Products</h2>
<a class="btn btn-success mb-3" asp-action="AddProduct">Add New Product</a>

<div class="product-cards-container">
    @foreach (var product in Model)
    {
        <div class="product-card">
            <div class="corner-accent"></div>
            <h2>@product.Name</h2>
            <div class="info">
                <div>Price: <span>@product.Price.ToString("N2")</span></div>
                <div>Category: <span>@product.Category</span></div>
                <div>Production Date: <span>@product.ProductionDate.ToShortDateString()</span></div>
            </div>
            <div class="actions">
                <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-primary btn-sm">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <form asp-action="Delete" asp-route-id="@product.ProductId" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?');">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}